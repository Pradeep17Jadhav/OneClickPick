}

@font-face {
    font-family: "Font1";
    src: url('..//resources/fonts/font1.ttf');
}

.box {
    position: absolute;
}

button {
    font-size: 18px;
    transition: 0.5s;
    background-color: #000;
    border: 2px solid #000;
    color: #fff;
}
button:hover {
    background-color: transparent;
    border: 2px solid #000;
    color: #000;
    border-radius: 35px;
    cursor: pointer;
}



/************************************************ HEADER START */
.header { 
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff; 
    position: fixed;
    box-shadow: 0px -5px 10px #000;
    z-index: 99;    
}

.headerName {
    font-family: "Calligraffitti", "sans-serif";
    font-size: 36px;
    font-weight: 500;
    line-height: 70px;
    transition: 0.3s;
}

.headerName:hover {
    cursor: pointer;
}

.headerNameActive {
    color: #03a08d;
    transition: 0.3s;
}

.headerItem {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    cursor: pointer;
    transition: 0.3s;
}
.headerItem:hover {
    color: #03a08d;
    transition: 0.2s;
}

.headerItemActive {
    border-top: 5px solid #00E3C8;
    color: #03a08d;
    transition: 0.2s;
}

/************************************************ SECTION START */
.section {
    height: 960;
    width: auto; 
    background-position: center center;
    background-size: cover;
    transform: translateZ(-1px);
}



/************************************************ INTRODUCTION SECTION START */
.introductionName {
    font-size: 108px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    line-height: 100%;
    text-shadow: 0px 0px 20px #000;
    min-height: 10px;
}

.introductionRole {
    font-size: 36px;
    font-weight: 300;
    color: #fff;
    text-align: center;
    line-height: 100%;
    text-shadow: 1px 1px 6px #000;
    min-height: 10px;
}



/************************************************ ABOUT ME SECTION START */
.aboutMeSection {
    background-color: #00E3C8;
}

.aboutMeTitle {
    font-family: "Font1", "sans-serif";
    font-size: 36px;
    text-align: center;
    transition: 0.5s;
    line-height: 100%;
}

.aboutMeDescription {
    font-size: 22px;
    text-align: center;
    transition: 0.5s;
    line-height: 150%;
    min-height: 10px;
}



/************************************************ SKILLS SECTION START */
.skillsSection {
    color: white;
    background-image: url("../resources/images/desk.jpg");
    background-attachment: fixed;
    text-align: center;
}

.skillsChart {
    display: flex;
    justify-content: center;
    align-items: center;
}

.skillsItem {
    text-align: center;

}

.skillsItemText {
    text-align: center;
    font-size: 15px;
}

.skillsBar {
    background-color: #00E3C8;
    transition:0.2s;
}
.skillsBar:hover {
    background-color: #028a7a;
    transition:0.2s;
}



/************************************************ CERTIFICATES SECTION START */
.certificateBox {
    overflow: hidden;
}

.certificate {
    background-position: center center;
    background-size: cover;
    -webkit-filter: grayscale(0);
 	transition:0.5s;

}
.certificate:hover { 
  	-webkit-filter: grayscale(1);
    transform:scale(1.10);
 	transition:0.5s;
}



/************************************************ FOOTER SECTION START */
.footerMadeBy {
    text-align: center;
    font-size: 22px;
}

.fa-heart {
    color: rgb(179, 0, 0);
}